@model BlogWebsite.Models.Blog

@{
    ViewData["Title"] = "Delete Blog Post";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this blog post?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3>@Model.Title</h3>
            </div>
            <div class="card-body">
                <p><strong>Author:</strong> @Model.Author</p>
                <p><strong>Published:</strong> @Model.CreatedDate.ToString("MMMM dd, yyyy")</p>
                @if (Model.UpdatedDate != Model.CreatedDate)
                {
                    <p><strong>Last Updated:</strong> @Model.UpdatedDate.ToString("MMMM dd, yyyy")</p>
                }
                <p><strong>Summary:</strong> @Model.Summary</p>
                
                <hr />
                
                <div class="blog-content" style="max-height: 300px; overflow-y: auto;">
                    @Html.Raw(Model.Content.Replace("\n", "<br />"))
                </div>
            </div>
        </div>

        <div class="mt-4">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Yes, Delete This Blog Post</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">No, Keep It</a>
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </form>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5>⚠️ Warning</h5>
            </div>
            <div class="card-body">
                <p>Deleting this blog post will:</p>
                <ul>
                    <li>Permanently remove the post</li>
                    <li>Remove it from all listings</li>
                    <li>Make it inaccessible to readers</li>
                </ul>
                <p class="text-danger"><strong>This action cannot be undone!</strong></p>
            </div>
        </div>
    </div>
</div>