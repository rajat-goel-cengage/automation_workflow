@model BlogWebsite.Models.Blog

@{
    ViewData["Title"] = "Create New Blog Post";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter your blog title..." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Author" class="form-label"></label>
                <input asp-for="Author" class="form-control" placeholder="Your name..." />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Summary" class="form-label"></label>
                <textarea asp-for="Summary" class="form-control" rows="3" placeholder="Write a brief summary of your blog post..."></textarea>
                <span asp-validation-for="Summary" class="text-danger"></span>
                <div class="form-text">This will be displayed in the blog list and home page.</div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Content" class="form-label"></label>
                <textarea asp-for="Content" class="form-control" rows="15" placeholder="Write your blog content here..."></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Publish Blog</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Writing Tips</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><strong>Title:</strong> Make it catchy and descriptive</li>
                    <li><strong>Summary:</strong> Keep it concise and engaging</li>
                    <li><strong>Content:</strong> Structure your thoughts clearly</li>
                    <li><strong>Length:</strong> There's no limit, write as much as you need</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}